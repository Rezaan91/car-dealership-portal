# Production Environment Variables for Render
# These are template values - actual values will be set in Render Dashboard

# Django Settings
DEBUG=False
DJANGO_SETTINGS_MODULE=djangoproj.settings

# Security - Set these in Render Dashboard
SECRET_KEY=${SECRET_KEY}
ALLOWED_HOSTS=${RENDER_EXTERNAL_HOSTNAME},.onrender.com

# Database - Automatically provided by Render
DATABASE_URL=${DATABASE_URL}

# CORS Settings - Update with your actual frontend domain
CORS_ALLOWED_ORIGINS=https://${RENDER_EXTERNAL_HOSTNAME}

# Gunicorn Workers
WEB_CONCURRENCY=4

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# Static Files
STATICFILES_STORAGE=whitenoise.storage.CompressedManifestStaticFilesStorage
